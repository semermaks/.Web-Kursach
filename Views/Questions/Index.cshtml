@model IEnumerable<Question>
@using TestKursach2.Models

@{
    ViewBag.Title = "Index";
}

<h2>Питання</h2>

<p>
    @Html.ActionLink("Створити нове", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Site)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer1Right)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer2Right)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer3Right)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer4Right)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.OvnerId == UserInfo.User.Id)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer4)
                </td>
                <td>
                    <a href="@item.Site">@item.Site</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer1Right)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer2Right)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer3Right)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer4Right)
                </td>

                <td>

                    @Html.ActionLink("Змінити", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Деталі", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "Delete", new { id = item.Id })

                </td>
            </tr>
        }
    }

</table>
